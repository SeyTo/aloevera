{
  "host": "localhost",
  "port": 3030,
  "public": "public/",
  "paginate": {
    "default": 10,
    "max": 50
  },
  "authentication": {
    "localService": {
      "authStrategies": [
        "jwt",
        "local",
        "refresh"
      ],
      "jwt": {
        "entities": [ "client" ],
        "options": {
          "header": {
            "typ": "access"
          },
          "audience": "https://yourdomain.com",
          "issuer": "feathers",
          "algorithm": "HS256",
          "expiresIn": "1d"
        }
      },
      "local": {
        "entities": [ "client" ],
        "usernameField": "user",
        "passwordField": "password"
      },
      "refresh": {
        "entities": [ "client" ],
        "accessTokenField": "accessToken",
        "refreshTokenField": "refreshToken"
      }
    },
    "jwtVerification": {
      "authStrategies": [ "jwt" ],
      "jwt": {
        "entities": [ "client" ],
        "options": {
          "header": {
            "typ": "access"
          },
          "audience": "https://yourdomain.com",
          "issuer": "feathers",
          "algorithm": "HS256",
          "expiresIn": "1d"
        }
      }
    }
  },
  "db": {
    "options": {
      "autoIndex": false,
      "useNewUrlParser": true,
      "useCreateIndex": true,
      "keepAlive": 10000,
      "useUnifiedTopology": true
    }
  }
}
